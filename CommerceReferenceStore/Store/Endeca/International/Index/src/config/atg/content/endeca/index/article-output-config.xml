<item item-descriptor-name="article" is-document="true">
  <title property-name="name"/>
  <properties>
    <property name="headline" type="string" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    <property name="body" type="string" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    <property name="abstract" type="string" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    <property name="language" is-dimension="true" type="string" property-accessor="/atg/endeca/index/accessor/LanguageNameAccessor" output-name="content.language" is-non-repository-property="true"/>
  </properties>

</item>

